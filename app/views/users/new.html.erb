<h1 class="page-heading">新規登録</h1>

<% @user.errors.full_messages.each do |message| %>
	<div class="form-error">
		<%= message %>
	</div>
<% end %>

<%= form_for @user, url: users_path do |f| %>
	<p>ユーザー名</p>
	<p>
		<%= f.text_field :name %>
	</p>
	<p>メールアドレス</p>
	<p>
		<%= f.text_field :email %>
	</p>
	<p>パスワード</p>
	<p>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.submit "新規登録" %>
	</p>
<% end %>