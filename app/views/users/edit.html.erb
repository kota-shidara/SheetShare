<% provide(:title, @user.name) %>
<h1 class="page-heading">ユーザー情報編集</h1>

<% @user.errors.full_messages.each do |message| %>
	<div class="form-error">
		<%= message %>
	</div>
<% end %>

<%= form_for @user, url: {action => 'update'} do |f| %>
	<p>ユーザー名</p>
	<p>
		<%= f.text_field :name %>
	</p>
	<p>メールアドレス</p>
	<p>
		<%= f.text_field :email %>
	</p>
		<%= f.submit "保存" %>
	</p>
<% end %>